@model CRUD.Models.Aluno

<h2>Salvar</h2>

@using (Html.BeginForm("save","home", FormMethod.Post, new { id="popupForm"}))
{
    if (Model != null && Model.IdAluno > 0)
    {
        @Html.HiddenFor(a=>a.IdAluno)
    }

    <div class="form-group">
        <label>Nome</label>
        @Html.TextBoxFor(a=>a.Nome, new { @class = "form-control"})
        @Html.ValidationMessageFor(a=>a.Nome)
    </div>
    <div class="form-group">
        <label>Sobrenome</label>
        @Html.TextBoxFor(a => a.Sobrenome, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Sobrenome)
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Email)
    </div>
    <div class="form-group">
        <label>Cidade</label>
        @Html.TextBoxFor(a => a.Cidade, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Cidade)
    </div>
    <div class="form-group">
        <label>Pais</label>
        @Html.TextBoxFor(a => a.Pais, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.Pais)
    </div>
    <div>
        <input type="submit" value="Salvar" />
    </div>
}
